@model Anlagenverwaltung.ViewModels.SonstigeAnlagenFormView
@{
                /**/

                /**/

                ViewBag.Title = "SonstigeAnlage";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sonstige Anlage bearbeiten/neu anlegen</h2>

@using (Html.BeginForm("Save", "SonstigeAnlage"))
{
    @Html.ValidationSummary(true, "Bitte beheben Sie die folgenden Fehler.")
    <div class="form-group">
        @Html.LabelFor(m => m.SonstigeAnlage.Gegenstand)
        @Html.TextBoxFor(m => m.SonstigeAnlage.Gegenstand, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SonstigeAnlage.Gegenstand)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SonstigeAnlage.Bezeichnung)
        @Html.TextBoxFor(m => m.SonstigeAnlage.Bezeichnung, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SonstigeAnlage.Bezeichnung)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SonstigeAnlage.Einkaufspreis)
        @Html.EditorFor(model => model.SonstigeAnlage.Einkaufspreis, new { htmlAttributes = new { @type = "float", @min = "0.00", @step = "0.01", @value = "0" } })
        @Html.Label("€")
        @Html.ValidationMessageFor(m => m.SonstigeAnlage.Einkaufspreis)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SonstigeAnlage.Einkaufsdatum)
        @Html.TextBoxFor(m => m.SonstigeAnlage.Einkaufsdatum, "{0:d MMM yyyy}", new { @class = "datepicker" })
        @Html.ValidationMessageFor(m => m.SonstigeAnlage.Einkaufsdatum)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SonstigeAnlage.KontoId)
        @Html.DropDownListFor(m => m.SonstigeAnlage.KontoId, new SelectList(Model.Konten, "Id", "NummerBezeichnung"), "Wählen Sie ein Abschreibungskonto aus:", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SonstigeAnlage.KontoId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SonstigeAnlage.Nutzungsdauer)
        @Html.TextBoxFor(m => m.SonstigeAnlage.Nutzungsdauer, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SonstigeAnlage.Nutzungsdauer)
    </div>
    @Html.HiddenFor(m => m.SonstigeAnlage.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeMonth: true,
                changeYear: true,
                yearRange: "2000:2025",
                showOn: "both",
                buttonText: "<i class='fa fa-calendar'></i>"
            });
        });
    </script>
}